<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this user from being saved:
    </h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<h1>Join Renecades</h1>
 <%= form_for @user do |f| %>

 <%= f.label :username, "Username", class: 'form-label' %><br>
 <%= f.text_field :username, class: 'form-text-box' %><br><br>

 <%= f.label :email, "Email", class: 'form-label' %><br>
 <%= f.text_field :email, class: 'form-text-box' %><br><br>

 <%= f.label :bio, "Bio", class: 'form-label' %><br>
 <%= f.text_field :bio, class: 'form-text-box' %><br><br>

 <%= f.label :favorite_game, "Favorite Game", class: 'form-label' %><br>
 <%= f.text_field :favorite_game, class: 'form-text-box' %><br><br>

 <%= f.label :password, "Password", class: 'form-label' %><br>
 <%= f.password_field :password, class: "password-box" %><br><br>

<%= f.submit "Create User", class: 'form-text-box' %>

<% end %>
