<% if @game.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@game.errors.count, "error") %>
      prohibited this game from being saved:
    </h2>

    <ul>
    <% @game.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h2>Create a New Game</h2>
<div id="Game Form">
<%= form_for @game do |f| %>

 <%= f.label :name, "Game Title:" %><br>
 <%= f.text_field :name %><br><br>

 <%= f.label :description, "Game Description:"%><br>
 <%= f.text_field :description %><br><br>

 <%= f.label :objective, "Game Objective:"%><br>
 <%= f.text_field :objective %><br><br>

 <%= f.label :number_of_players, "# of Players:" %><br>
 <%= f.number_field :number_of_players, max: 10 %><br><br>

 <%= f.label :reward_points, "# of Reward Points:" %><br>
 <%= f.number_field :reward_points, max: 100 %><br><br>

 <%= f.label :genre, "Game Genre:" %><br>
 <%= f.text_field :genre %><br><br>

 <%= f.label :category_id, "Gaming Category:" %><br>
 <%= f.collection_select :category_id, Category.all, :id, :name, selected: @category.id %><br><br>
 <br>

 <%= f.submit %>
<% end %>
</div>
