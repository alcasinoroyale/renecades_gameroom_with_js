<!DOCTYPE html>
<html>
  <head>
    <title>RenecadesGameroom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all'  %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

  <div>
    <% if flash[:message] %>
       <p><%= flash[:message] %></p>
    <% end %>
  </div>

    <header>
      <nav>
        <%= link_to "Home", root_path %>
        <% if !logged_in? %>
          <%= link_to "Login", '/login' %>
          <%= link_to "Join", new_user_path %><br><br>
        <% elsif logged_in? %>
          <%= link_to "Play Games", games_path, class: "games_data" %>
          <%= link_to "Create Games", new_game_path %>
          <%= link_to "Search Categories", categories_path %>
          <%= link_to "Leaderboard", users_path %>
          <%= link_to "User Profile", user_path(current_user) %>
          <%= link_to "Logout", '/logout' %>
        <% end %>
        <br><br>
      </nav>
    </header>
    <div id="renecades-container">
    <%= yield %>
    </div>
  </body>
</html>
