<h2>Create New Review</h2>

<%= form_for [@game, @review] do |f| %>

<%= f.label :title, "Title", class: 'form-label' %><br>
<%= f.text_field :title, class: 'review-text-box' %><br><br>

<%= f.label :content, "Content", class: 'form-label' %><br>
<%= f.text_area :content, class: 'form-text-area' %><br><br>
<%= f.submit "Create Review", class: 'form-text-box' %>

<% end %>
